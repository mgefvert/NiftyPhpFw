<div class="page">[@Go to page:] </div>
<? for ($i=0; $i<$this->pages; $i++): ?>
    <a class="page <?= $this->page == $i ? 'active' : '' ?>" href="?pg=<?= $i ?>">
        <? if ($i == 0): ?>
            [@First]
        <? elseif ($i == $this->pages - 1): ?>
            [@Last]
        <? else: ?>
            <?= $i + 1 ?>
        <? endif ?>
    </a>
<? endfor ?>
